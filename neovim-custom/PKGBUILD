# Maintainer: ZaShkval

pkgname=neovim-custom
pkgver=0.0.1
pkgrel=1
pkgdesc="Custom neovim setup with lazy.nvim and plugins"
arch=("any")
url="https://github.com/folke/lazy.nvim"
license=("GPL3")
depends=('neovim' 'lazy-nvim')
source=("configs.tar.xz")
install=setup.install
sha256sums=("SKIP")

package() {
	echo "[*] Installing ..."
    mkdir -p ${pkgdir}/usr/share/neovim-custom
    cp -r configs/* ${pkgdir}/usr/share/neovim-custom
}
